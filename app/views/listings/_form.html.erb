
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
        
    <%= f.input :date_available, required: true , input_html: { class: "form-control center" } %>
    <%= f.input :price, required: true , input_html: { class: "form-control center", max:4000, min:0 } %>
    <%= f.input :title, required: true , input_html: { class: "form-control center" } %>
    <%= f.input :description, required: true , input_html: { class: "form-control center" } %>
    
    <%= f.association :category, required: true , prompt: "Select Category", input_html: { class: "form-control center" }%>


    <%= f.input :location, required: true  , input_html: { class: "form-control center" }%>
    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
