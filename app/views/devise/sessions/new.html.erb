<div class="text-center">
  <div class="form-group row align-items-center justify-content-center  w-30 p-4">
   <div class="card rounded row m-4">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       
          <div class="form-group">
          <%= f.input :email,
                      required: false,
                      placeholder:'whats your email?',
                      autofocus: true,
                      input_html: { autocomplete: "email", class:'form-control' } %>
         </div>
          <div class="form-group">
          <%= f.input :password,
                      placeholder: "Whats your password?",
                      required: false,
                      input_html: { autocomplete: "password", class: 'form-control' } %>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %> 
    </div>
  </div>
</div>