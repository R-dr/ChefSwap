<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, required: true ,input_html: { class: 'form-control' }, placeholder: "Got a fancy name with at least 5 chars?" %>
    <%= f.input :cooktime , required: true ,input_html: { class: 'form-control' },hint:' give us a rough number here. '%>
    <%= f.input :image, required: true ,input_html: { class: 'form-control' },hint:'People eat with their eyes, give them a feast.' %>
    <%= f.input :body, label: 'Method',  as: :rich_text_area,required: true ,input_html: { class: 'form-control' }, placeholder: "There has to be SOME method to the madness!",hint:' 15 char minimum ' %>
    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit ,class:'btn btn-primary'%>
  </div>
<% end %>
