<p id="notice"><%= notice %></p>


  <h1 class='text-center'>Your Recipes</h1>
<%= link_to 'New recipe', new_recipe_path, class:'btn btn-dark d-block pb-3 mb-4' %>
<div class="container d-flex justify-content-center pt-4">
  <div class="card pb-4 " style="width: 25rem;">
    <% @recipes.each do |rec| %>

  <%= image_tag(rec.image, class:'card-img-top') if rec.image.attached? %>
    <h5 class="card-title">  <%= rec.title %></h5>
    <p class="card-text"> <%= rec.body %></p>
  <%= link_to 'show', rec ,class:'btn btn-primary mb-4'%>
  <div class="bg-dark d-block"></div>
  <% end %>
  </div>
</div>
