<div class="text-center">
  <div class="form-group  align-items-center justify-content-center  w-30 p-4  bg-light ">
  <div class="card rounded row m-4">
          <h2>Sign up</h2>
    <p> All these fields are required.</p>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            
              <div class="form-group ">
                <%= f.input :name, placeholder: "What's your name?", required: true ,input_html: { class: 'form-control' }%>
              </div>
            

            <div class="form-group">
              <%= f.input :email, placeholder: "What's your email?",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: 'form-control' }
                          %>
            </div>
              
              <div class="form-group">
                <%= f.input :password,
                          required: true,
                          input_html: { autocomplete: "new-password" , class: 'form-control'}, placeholder: "Six char minimum." %>
            </div>
              
              <div class="form-group">
                <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" , class: 'form-control'}, placeholder: "That same password please." %>
            </div>
              <div class="form-group">
              <%= f.input :is_chef, inline_label: 'Sign up as a chef?',input_html: { class: 'form-control' } %>
              <p> Check here to sign up as a chef but, you cant change this later</p>
            </div>
              
                <div class="form-group">
                  <%= f.input :avatar, required: true ,input_html: { class: 'form-control' }, hint: "Got a pretty picture?"%>
                </div>
              
          

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class:' btn btn-primary'%>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

