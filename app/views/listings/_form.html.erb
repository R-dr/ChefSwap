
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { class: "form-control center" } %>
    <%= f.input :description, input_html: { class: "form-control center" } %>
    
    <%= f.association :category, prompt: "Select Category", input_html: { class: "form-control center" }%>


    <%= f.input :location , input_html: { class: "form-control center" }%>
    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
